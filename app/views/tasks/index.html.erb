<% if logged_in? %>
  
  <h1>タスク一覧</h1>

  <ul>
      <% @tasks.each do |task| %>
        <li><%= link_to task.id, task %> : <%= task.status %> : <%= task.content %></li>
      <% end %>
  </ul>

  <%= link_to "タスクの作成", new_task_path %>
  
<% else %>
  <div>
    <h1>Welcome to Tasklist</h1>
    <%= link_to "Sign up now!", signup_path %>
  </div>
<% end %>